<%- include("partials/header") %>

<div class='ui main text container segment'> 
    <div class='ui huge header'>Edit <%=blog.title%></div>

    <form class='ui form' action="/blogs/<%=blog._id%>?_method=PUT"  method='POST'>
        <div class='field'>
            <label>Title</label>
            <input type='text' name='blog[title]' placeholder='title' value="<%=blog.title%>">
        </div>
        <div class='field'>
            <label>Image URL</label>
            <input type='text' name='blog[image]' placeholder='image' value="<%=blog.image%>">
        </div>
        <div class='field'>
            <label>Blog Contents</label>
            <textarea name='blog[body]' placeholder='Blog Contents' ><%=blog.body%></textarea>
        </div>
        
        <input class='ui inverted big pink button' type='submit'>   
    </form>

</div>
<%- include("partials/footer") %>